{% extends '/base.html.twig' %}

{% block stylesheets %}
  <link  href="{{ asset('css/index.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
  <script src="js/index.js"></script>
{% endblock %}

{% block content %}
  <main>
    <table class="index-table">
      <caption>Posts</caption>
      <thead>
        <th>Title</th>
        <th></th>
      </thead>
      <tbody>
        {% for post in posts %}
          <tr>
            <td class="post-title">{{ post.title }}</td>
            <td>
              <a class="btn" href="show-post/{{ post.id }}">show</a>
              <a class="btn" href="edit-post/{{ post.id }}">edit</a>
              <a class="btn js-delete-btn" href="#" data-id="{{ post.id }}">delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>
{% endblock %}
